<UserControl x:Class="PrviProgram.Izgled.IzgledUpravnik.LekoviProzor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrviProgram.Izgled.IzgledUpravnik"
             Height="700" Width="1200"
             Loaded="UserControl_Loaded"
             KeyDown="UserControl_KeyDown">

    <Grid Background="SeaShell">
        <DockPanel>
            <Menu DockPanel.Dock ="Top" Height="20" VerticalAlignment="Top" Background="SeaShell">
                <Menu.ItemsPanel>
                    <ItemsPanelTemplate>
                        <DockPanel HorizontalAlignment="Stretch"></DockPanel>
                    </ItemsPanelTemplate>
                </Menu.ItemsPanel>

                <MenuItem Header="File" InputGestureText="Ctrl" Name="File" Width="35">
                    <MenuItem Name="DodajLek" Header="Dodaj lek" InputGestureText="Ctrl+B" Click="DodajLek_Click"></MenuItem>
                    <MenuItem Name="LogOut" Header="Log out"  InputGestureText="Ctrl+D" Click="LogOut_Click" ></MenuItem>
                </MenuItem>

                <MenuItem Header="Edit" Name="Edit_Name" Width="35">
                    <MenuItem Name="PodesavanjaNalogaMenu" Header="Podesavanja naloga"  InputGestureText="Ctrl + Q" Click="PodesavanjaNalogaMenu_Click"></MenuItem>
                    <MenuItem Name="PodesavanjaMenu" Header="Podesavanja"  InputGestureText="Ctrl+W" Click="PodesavanjaMenu_Click"></MenuItem>
                </MenuItem>

                <MenuItem Header="View" Name="ViewName" Width="35">
                    <MenuItem Name="SaleMenu" Header="Sale"  InputGestureText="Ctrl+S" Click="SaleMenu_Click"></MenuItem>
                    <MenuItem Name="OpremaMenu" Header="Oprema"  InputGestureText="Ctrl+O" Click="OpremaMenu_Click"></MenuItem>
                    <MenuItem Name="LekoviMenu" Header="Lekovi"  InputGestureText="Ctrl+S" Click="LekoviMenu_Click"></MenuItem>
                </MenuItem>

                <MenuItem Header="Help" Name="Help_Name" Width="35" HorizontalAlignment="Left">
                    <MenuItem Name="HelpMenu" Header="Help"  InputGestureText="Ctrl+H" Click="HelpMenu_Click"></MenuItem>
                </MenuItem>
            </Menu>

            <Grid DockPanel.Dock="Bottom">
                <DataGrid x:Name="dataGridLekovi" Margin="216,208,187,148" HorizontalContentAlignment="Right" VerticalContentAlignment="Stretch" FontStyle="Normal" FontWeight="Bold" Opacity="0.99" IsSynchronizedWithCurrentItem="False" RenderTransformOrigin="0.487,0.503" IsReadOnly="True" AutoGenerateColumns="False" ItemsSource="{Binding dataSale}">
                    <DataGrid.Resources>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>

                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Sifra" Binding="{Binding Sifra}" Width="*"/>
                        <DataGridTextColumn Header="Naziv" Binding="{Binding Naziv}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button x:Name ="Dodaj" Style="{StaticResource UpravnikButton }" Click="Dodaj_Click"  Content="Dodaj" HorizontalAlignment="Left" Height="26" Margin="216,155,0,0" VerticalAlignment="Top" Width="98" >
                    <Button.ToolTip>
                        <ToolTip>
                            Dodavanje novog leka
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
                <Button x:Name ="Izmeni" Style="{StaticResource UpravnikButton }" Click="Izmeni_Click" Content="Izmeni" HorizontalAlignment="Left" Height="26" Margin="319,155,0,0" VerticalAlignment="Top" Width="98">
                    <Button.ToolTip>
                        <ToolTip>
                            Izmena selektovanog leka
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
                <Button x:Name ="Izbrisi" Style="{StaticResource UpravnikButton }" Click="Izbrisi_Click"  Content="Izbrisi" HorizontalAlignment="Left" Height="26" Margin="422,155,0,0" VerticalAlignment="Top" Width="98">
                    <Button.ToolTip>
                        <ToolTip>
                            Brisanje selektovanog leka
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
                <Button x:Name ="Informacije" Style="{StaticResource UpravnikButton }" Click="Informacije_Click"  Content="Informacije" HorizontalAlignment="Left" Height="26" Margin="525,155,0,0" VerticalAlignment="Top" Width="98">
                    <Button.ToolTip>
                        <ToolTip>
                            Informacije o selektovanom leku
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
                <Button x:Name ="Primedbe" Style="{StaticResource UpravnikButton }" Click="Primedbe_Click"  Content="Primedbe" HorizontalAlignment="Left" Height="26" Margin="628,155,0,0" VerticalAlignment="Top" Width="98">
                    <Button.ToolTip>
                        <ToolTip>
                            Lista neodobrenih lekova
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
                <Button x:Name="Nazad" Style="{StaticResource UpravnikButton }" Click="Nazad_Click" Content="Nazad" HorizontalAlignment="Left" Height="24" Margin="35,589,0,0" VerticalAlignment="Top" Width="76" RenderTransformOrigin="0.539,1.344">
                    <Button.ToolTip>
                        <ToolTip>
                            Povratak na pocetni prozor
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
                <Button x:Name="Pomoc" Style="{StaticResource UpravnikButton }" Click="Pomoc_Click" Content="Pomoc" HorizontalAlignment="Left" Height="21" Margin="1081,49,0,0" VerticalAlignment="Top" Width="66">
                    <Button.ToolTip>
                        <ToolTip>
                            Deteljna uputstva za korisnjece aplikacije
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
                <Label Content="Lekovi" HorizontalAlignment="Left" Height="56" Margin="574,32,0,0" VerticalAlignment="Top" Width="120" FontSize="26"/>
            </Grid>
        </DockPanel>
    </Grid>
</UserControl>
