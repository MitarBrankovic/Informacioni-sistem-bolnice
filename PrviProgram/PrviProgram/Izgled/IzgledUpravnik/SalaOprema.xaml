<Window x:Class="PrviProgram.Izgled.IzgledUpravnik.SalaOprema"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrviProgram.Izgled.IzgledUpravnik"
        mc:Ignorable="d"
        Title="SalaOprema" Height="470" Width="500"
        KeyDown="Window_KeyDown">
    <Grid Background="SeaShell">
        <Label x:Name = "labela" Content="" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" Height="34" Margin="0,10,0,0" VerticalAlignment="Top" Width="194" FontSize="20" FontFamily="Bahnschrift Light"/>
        <ListView x:Name="listViewOprema"  HorizontalAlignment="Center" Height="311" VerticalAlignment="Top" Width="292" Margin="0,54,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Naziv" Width="292" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="Odustani" Style="{StaticResource UpravnikButton}" Content="Odustani" HorizontalAlignment="Center" Height="27" Margin="0,388,0,0" VerticalAlignment="Top" Width="102" Click="Odustani_Click"/>

    </Grid>
</Window>
