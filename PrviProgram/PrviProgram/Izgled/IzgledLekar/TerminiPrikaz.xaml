<UserControl x:Class="PrviProgram.Izgled.IzgledLekar.TerminiPrikaz"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrviProgram.Izgled.IzgledLekar"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="800">
    <Grid>
        <Button ToolTip="Dodaj termin" x:Name ="Dodaj" Click="Dodaj_Click"  Content="Dodaj" HorizontalAlignment="Left" Height="50" Margin="261,19,0,0" VerticalAlignment="Top" Width="110" />
        <Button ToolTip="Izmeni informacije o terminu" x:Name ="Izmeni" Click="Izmeni_Click"  Content="Izmeni" HorizontalAlignment="Left" Height="50" Margin="371,19,0,0" VerticalAlignment="Top" Width="110" RenderTransformOrigin="1.105,-0.451"/>
        <Button ToolTip="Izbriši termin" x:Name ="Izbrisi" Click="Izbrisi_Click"  Content="Izbrisi" HorizontalAlignment="Left" Height="50" Margin="481,19,0,0" VerticalAlignment="Top" Width="110"/>
        <Button ToolTip="Karton pacijenta" x:Name ="Informacije" Click="Informacije_Click"  Content="Karton pacijenta" HorizontalAlignment="Left" Height="50" Margin="41,19,0,0" VerticalAlignment="Top" Width="110" />
        <Button x:Name ="Anamneza" Click="Anamneza_Click"  Content="Anamneza" HorizontalAlignment="Left" Height="50" Margin="151,19,0,0" VerticalAlignment="Top" Width="110" />


        <DataGrid ToolTip="Lista termina" x:Name="dataGridLekar" Margin="41,91,41,63" SelectionChanged="DataGrid_SelectionChanged" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto" VerticalContentAlignment="Stretch" FontStyle="Normal" FontWeight="Bold" Opacity="0.99" IsSynchronizedWithCurrentItem="False" RenderTransformOrigin="0.487,0.503" IsReadOnly="True" AutoGenerateColumns="False" MinHeight="450">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>

            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Izvrsen" Binding="{Binding Izvrsen}" Width="0.07*"/>
                <DataGridTextColumn Header="Sifra termina" Binding="{Binding SifraTermina}"  Width="0.14*"/>
                <DataGridTextColumn Header="Tip termina" Binding="{Binding TipTermina}" Width="0.09*"/>
                <DataGridTextColumn Header="Datum" Binding="{Binding Datum, StringFormat={}{0:dd/MM/yyyy}}" Width="0.14*"/>
                <DataGridTextColumn Header="Vreme" Binding="{Binding Vreme, StringFormat='HH:mm:ss'}" Width="0.08*"/>
                <DataGridTemplateColumn Header="Pacijent" Width="0.14*">

                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding pacijent}"/>
                                <TextBlock Text="{Binding guestPacijent}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Sala" Binding="{ Binding sala.Sifra }"  Width="0.09*"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox ToolTip="Pretraži" x:Name="TextboxSearch" HorizontalAlignment="Left" FontSize="17" VerticalContentAlignment="Center" Margin="591,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="151" Height="50" TextChanged="TextBox_TextChanged"/>
    </Grid>
</UserControl>
