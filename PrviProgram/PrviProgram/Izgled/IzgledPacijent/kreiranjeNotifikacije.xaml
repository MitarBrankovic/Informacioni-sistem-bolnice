        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:PrviProgram.Izgled.IzgledPacijent"
        mc:Ignorable="d"
        Title="kreiranjeNotifikacije" Height="366" Width="524">
    <Grid Margin="0,0,4,0" Height="365" VerticalAlignment="Top">
        <TextBox x:Name="OpisLeka" HorizontalAlignment="Left" Margin="148,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="216" Height="94"/>
