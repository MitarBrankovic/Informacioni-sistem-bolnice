        <DatePicker x:Name="endDate" HorizontalAlignment="Left" Height="22" Margin="148,236,0,0" VerticalAlignment="Top" Width="119" SelectedDateChanged="endDate_SelectedDateChanged"  DisplayDateStart="{x:Static sys:DateTime.Today}"/>
        <Label Content="Lek:" HorizontalAlignment="Left" Margin="28,14,0,0" VerticalAlignment="Top"/>
        <Label Content="Opis leka:" HorizontalAlignment="Left" Margin="30,52,0,0" VerticalAlignment="Top"/>
