        <Label Content="Od:" HorizontalAlignment="Left" Margin="26,195,0,0" VerticalAlignment="Top"/>
        <Label Content="Do:" HorizontalAlignment="Left" Margin="26,233,0,0" VerticalAlignment="Top"/>
        <Button x:Name="potvrdiButton" Content="Potvrdi" HorizontalAlignment="Left" Height="24" Margin="79,276,0,0" VerticalAlignment="Top" Width="79" Click="Button_Click"/>
        <Button x:Name="otkaziButton" Content="Otkazi" HorizontalAlignment="Left" Height="24" Margin="177,276,0,0" VerticalAlignment="Top" Width="86"/>
        
        <ComboBox  x:Name="listaLekova"  HorizontalAlignment="Left" Margin="153,20,0,0" VerticalAlignment="Top" Width="120" IsEditable="true"  SelectionChanged="listaLekova_SelectionChanged"/>

