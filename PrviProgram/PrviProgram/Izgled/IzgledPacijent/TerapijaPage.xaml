            <Label Content="Subota: " FontSize="20" Height="35" Width="136" Margin="710,52,163,0" VerticalAlignment="Top"/>
            <Label Content="Nedelja: " FontSize="20" Height="35" Width="136" Margin="833,52,3,0" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Name="ponedeljakText" Height="280" Width="130" Margin="3,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" />
