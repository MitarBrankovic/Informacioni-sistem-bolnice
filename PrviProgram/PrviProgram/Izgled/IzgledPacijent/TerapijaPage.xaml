            <TextBox HorizontalAlignment="Left" Height="280"  Name="nedeljaText" Margin="823,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130"/>
            <TextBox HorizontalAlignment="Center" Height="35" Name="odKogDoKogDatum" Margin="0,8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210"/>

