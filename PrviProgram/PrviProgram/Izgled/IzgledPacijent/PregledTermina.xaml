<Window x:Class="PrviProgram.Izgled.IzgledPacijent.PregledTermina"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrviProgram.Izgled.IzgledPacijent"
        mc:Ignorable="d"
        Title="Pregled Termina" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Image Source="/Slike/upravnik.jpg" Stretch="UniformToFill" HorizontalAlignment="Center" Width="800"/>

        <Button x:Name ="PomeranjeZakazanogTerminaButton" Click="Pomeraj_Click"  Content="Pomeranje zakazanog termina" HorizontalAlignment="Left" Height="26" Margin="387,56,0,0" VerticalAlignment="Top" Width="232" />
        <Button x:Name ="DodajTerminButton" Click="Dodaj_Click"  Content="Dodaj termin" HorizontalAlignment="Left" Height="26" Margin="18,56,0,0" VerticalAlignment="Top" Width="98" />
        <Button x:Name ="IzmeniTerminButton" Click="Izmeni_Click" Content="Izmeni termin" HorizontalAlignment="Left" Height="26" Margin="143,56,0,0" VerticalAlignment="Top" Width="98"/>
        <Button x:Name ="IzbrisiButton" Click="Izbrisi_Click"  Content="Izbrisi" HorizontalAlignment="Left" Height="26" Margin="259,55,0,0" VerticalAlignment="Top" Width="98"/>

        <DataGrid x:Name="dataGridPacijenta" AutoGenerateColumns="False" HorizontalContentAlignment="Right" VerticalContentAlignment="Stretch" FontStyle="Normal" FontWeight="Bold" Opacity="0.99" IsSynchronizedWithCurrentItem="False" RenderTransformOrigin="0.487,0.503" IsReadOnly="True" Margin="100,105,97,44">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>

            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Sifra" Binding="{Binding SifraTermina}"  Width="102"/>
                <DataGridTextColumn Header="Tip termina" Binding="{Binding TipTermina}"  Width="102"/>
                <DataGridTextColumn Header="Datum" Binding="{Binding Datum, StringFormat={}{0:dd/MM/yyyy}}"  Width="102"/>
                <DataGridTextColumn Header="Vreme" Binding="{Binding Vreme, StringFormat='HH:mm:ss'}"  Width="102"/>
                <DataGridTextColumn Header="Sala"  Binding="{Binding  sala.Naziv}"  Width="102"/>
                <DataGridTextColumn Header="Lekar"  Binding="{Binding lekar.ImePrezime}"  Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Kreiranje notifikacije" HorizontalAlignment="Left" Height="26" Margin="639,56,0,0" VerticalAlignment="Top" Width="129" Click="Button_Click"/>


    </Grid>
</Window>